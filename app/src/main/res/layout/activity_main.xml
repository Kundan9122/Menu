<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:background="#C7F1F7">


    <RadioGroup
        android:id="@+id/r1"
        android:layout_width="404dp"
        android:layout_height="593dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:text="      Select Your Food"
            android:textColor="#F44336"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="33dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Non-Veg"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:checked="true"
                    android:text="Veg"
                    android:textSize="24sp" />
            </RadioGroup>

        </LinearLayout>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="_______________________________"
            android:textColor="#F44336"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="33dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#F44336"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="33dp" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="210dp"
            android:layout_height="96dp" />

        <CheckBox
            android:id="@+id/cb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kheer  "
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="203dp"
            android:layout_height="99dp" />

        <CheckBox
            android:id="@+id/cb2"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Mix Sabji"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="212dp"
            android:layout_height="92dp" />

        <!--            android:layout_marginTop="265dp"-->
        <!--            android:layout_marginEnd="158dp"-->

        <CheckBox
            android:id="@+id/cb3"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="Shahi Paneer"
            android:textSize="20sp" />


    </RadioGroup>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="419dp"
        android:layout_height="57dp"
        android:layout_below="@+id/radioGroup"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:background="#18BDAD"
        android:ellipsize="marquee"
        android:fadingEdge="vertical"
        android:gravity="center"
        android:text="Check Out"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="207dp"
        android:layout_marginBottom="24dp"
        android:ellipsize="marquee"
        android:text="WELCOME"
        android:textColor="#2196F3"
        android:textSize="18sp"
        android:typeface="serif"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toTopOf="@+id/r1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="24dp"
        android:ellipsize="marquee"
        android:text="TextView"
        android:textColor="#FA0BF5"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/r1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>